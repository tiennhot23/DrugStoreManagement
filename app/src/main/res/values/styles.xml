<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/light_card</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittext</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_card_background</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="LargeImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_card_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ZoomAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_dismiss</item>
    </style>
    <style name="ActivityAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="SmallText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/small_text</item>
    </style>
    <style name="NormalText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">10dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@null</item>
        <item name="android:popupElevation">1dp</item>
        <item name="android:popupAnimationStyle">@style/ZoomAnimation</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    
    <style name="MySearchBox" parent="CardView">
        <item name="cardBackgroundColor">@color/light_card</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="contentPadding">2dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>