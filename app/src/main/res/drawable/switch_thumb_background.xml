<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list >

            <item
                android:bottom="4dp"
                android:top="4dp"
                android:left="4dp"
                android:right="4dp">

                <shape android:shape="oval">
                    <solid android:color="@color/dark_primary"/>
                    <size android:height="3dp"
                        android:width="3dp"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_small_chart"
                android:bottom="10dp"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"/>

        </layer-list>
    </item>
    <item>
        <layer-list >

            <item
                android:bottom="4dp"
                android:top="4dp"
                android:left="4dp"
                android:right="4dp">

                <shape android:shape="oval">
                    <solid android:color="@color/light_primary"/>
                    <size android:height="3dp"
                        android:width="3dp"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_small_chart"
                android:bottom="10dp"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"/>

        </layer-list>
    </item>
</selector>