<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistic.StatisticActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/statistic"
            android:textColor="@color/light_text"
            android:textSize="@dimen/text_large" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/round_card_light_background">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:spinnerMode="dialog"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark_primary"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line"
            android:layout_marginVertical="15dp"
            android:groupIndicator="@drawable/expandlist_indicator"
            android:overScrollMode="never" />
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_primary"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/layout_total"
            android:orientation="horizontal" />
        <RelativeLayout
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/txt_total"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tá»•ng doanh thu: "
                android:textStyle="bold"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_normal"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/vnd"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="12000"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_normal"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/vnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="VND"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_normal"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>